<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chattingroom_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/chattingroom_name"
                android:layout_width="50dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/chattingroom_imageView"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/chattingroom_imageView"/>

            <TextView
                android:id="@+id/chattingroom_content"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@+id/chattingroom_imageView"
                app:layout_constraintLeft_toRightOf="@+id/chattingroom_imageView"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/chattingroom_time"
                android:layout_width="300dp"
                android:layout_height="30dp"

                app:layout_constraintTop_toBottomOf="@+id/chattingroom_content"
                app:layout_constraintLeft_toRightOf="@+id/chattingroom_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>