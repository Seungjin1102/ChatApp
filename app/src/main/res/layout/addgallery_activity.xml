<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/addgallery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="제목을 입력하세요"/>

    <ImageView
        android:id="@+id/addgallery_photo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/addgallery_title"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_action_name"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/addgallery_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/addgallery_photo"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="100dp"
        android:text="확인"/>

    <Button
        android:id="@+id/addgallery_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addgallery_photo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="100dp"
        android:layout_marginTop="100dp"
        android:text="취소"/>

</androidx.constraintlayout.widget.ConstraintLayout>