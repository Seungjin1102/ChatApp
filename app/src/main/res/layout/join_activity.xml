<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/join_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="이름"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/join_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="비밀번호"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="333dp"
        app:layout_constraintLeft_toLeftOf="@id/join_name"
        app:layout_constraintTop_toBottomOf="@id/join_name"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/join_passwordck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="비밀번호 확인"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="241dp"
        app:layout_constraintLeft_toLeftOf="@id/join_name"
        app:layout_constraintTop_toBottomOf="@id/join_password"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/join_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/join_passwordck"
        app:layout_constraintLeft_toLeftOf="@id/join_passwordck"
        app:layout_constraintRight_toRightOf="@id/join_passwordck"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_action_name"/>

    <Button
        android:id="@+id/join_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="확인"
        app:layout_constraintTop_toBottomOf="@id/join_imageView"
        app:layout_constraintLeft_toLeftOf="@id/join_imageView"/>
    <Button
        android:id="@+id/join_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/join_imageView"
        app:layout_constraintRight_toRightOf="@id/join_imageView"
        android:text="취소"/>

</androidx.constraintlayout.widget.ConstraintLayout>