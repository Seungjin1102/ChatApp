<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/item_friends_cardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp"

            >
                <ImageView
                    android:id="@+id/item_friends_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:id="@+id/item_friends_textView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toRightOf="@+id/item_friends_cardView"
            app:layout_constraintTop_toTopOf="@+id/item_friends_cardView"/>

        <ImageView
            android:id="@+id/item_friends_chatimgeView"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_chat_24"

            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>